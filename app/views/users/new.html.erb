<% provide(:title, 'Sign up') %>
<div class="row col-md-6 col-md-offset-3 well">
<h1>Sign up</h1>
</div>

<div class="row">
  <div class="col-md-4 col-md-offset-4 well">
    <%= form_for(@user, html: { multipart: true }) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.radio_button(:isReviewer, "0") %> 
      <%= f.label(:isReviewer, "I am a RE : me client ") %>
      <%= f.radio_button(:isReviewer, "1") %>
      <%= f.label(:isReviewer, "I am a RE : me reviewer") %>
      
      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<script type="text/javascript">
  $('#user_resume').bind('change', function() {
    size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Maximum file size is 5MB. Please choose a smaller file.');
    }
  });
</script>