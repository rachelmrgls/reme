<% provide(:title, @client.name) %>
<div class="row">
  <aside class="col-md-12">
    <section class="client_info">
      <h1 class="col-md-4">
        <%= gravatar_for @client %>
        <%= @client.name %>
      </h1>
      <span class="col-md-4 col-md-offset-4">
      	<%= link_to "Get Advice Now!", current_client, class: "btn btn-lg btn-success" %>
      </span>
    </section>
    <%= image_tag @client.resume.url if @client.resume? %>
  </aside>
</div>